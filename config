# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks
        mode hide
        hidden_state hide
        modifier $mod
        binding_mode_indicator yes
}

## PROGRAMS

################################################################################
### OMNIPRESENT PROCESSES
################################################################################
for_window [title="omni-.*"] floating enable
for_window [title="omni-.*"] resize set 1600 800
for_window [title="omni-.*"] move scratchpad
for_window [title="omni-.*"] border pixel 6

################################################################################
#### OMNIPRESENT EDITOR
################################################################################
exec --no-startup-id sleep 1 && emacs --title "omni-editor" ~/projects/notes
bindsym $mod+n [title="omni-editor"] scratchpad show; [title="omni-editor"] move position center

################################################################################
#### OMNIPRESENT TERMINAL
################################################################################
exec --no-startup-id sleep 4 && emacs --title "omni-terminal" --eval="(multi-term)"
bindsym $mod+comma [title="omni-terminal"] scratchpad show; [title="omni-terminal"] move position center

################################################################################
#### OMNIPRESENT R
################################################################################
exec --no-startup-id sleep 8 && emacs --title "omni-r" --eval="(progn (ess-r-mode) (R-patched-dyntrace))"
bindsym $mod+period [title="omni-r"] scratchpad show; [title="omni-r"] move position center

################################################################################
#### OMNIPRESENT FILE MANAGER
################################################################################
exec --no-startup-id sleep 12 && emacs --title "omni-file-manager" --eval="(ranger)"
bindsym $mod+slash [title="omni-file-manager"] scratchpad show; [title="omni-file-manager"] move position center

################################################################################
## WINDOW BORDER
################################################################################
hide_edge_borders smart
# Remove title bar and show a 3 px wide border
for_window [class="^.*"] border pixel 3

################################################################################
## MISCELLANEOUS STARTUP COMMANDS
################################################################################
exec --no-startup-id setxkbmap -option ctrl:swapcaps

################################################################################
## MISCELLANEOUS XF86 KEYBINDINGS
################################################################################
# Pulse Audio Controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# Media Player Controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen Brightness Controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 5 #increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 5 #decrease screen brightness

# Screenshot Controls
bindsym --release Print exec flameshot full --path ~/pictures/screenshots
bindsym --release Shift+Print exec flameshot gui --path ~/pictures/screenshots

# Network Manager
exec --no-startup-id nm-applet

# Bluetooth Manager
exec --no-startup-id blueman-applet

# Volume Manager
exec --no-startup-id pasystray
